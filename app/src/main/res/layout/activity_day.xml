<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Day">

    <!-- Top Logo -->
    <ImageView
        android:id="@+id/image_logo_top"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ayb_way_logo_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_day"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_top">

        <TextView
            android:id="@+id/text_choose_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Choose Bus"
            android:textSize="48sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bus_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_left"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:backgroundTint="#03A9F4"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="@string/left"
                android:textSize="34sp"
                app:cornerRadius="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/view_stage"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/textview_border"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="38sp"
                app:layout_constraintEnd_toStartOf="@id/button_right"
                app:layout_constraintStart_toEndOf="@id/button_left"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_right"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:backgroundTint="#03A9F4"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="@string/right"
                android:textSize="34sp"
                app:cornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_submit"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:backgroundTint="#4CAF50"
                android:text="OK"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="0dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#FF0000"
                android:text="@string/back"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="0dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_end_day"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_top">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to end this Day?"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/button_end_day"
            android:layout_width="250dp"
            android:layout_height="91dp"
            android:backgroundTint="#FF9800"
            android:text="END DAY"
            android:textSize="34sp"
            app:cornerRadius="0dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/button_back2"
            android:layout_width="250dp"
            android:layout_height="91dp"
            android:backgroundTint="#F80101"
            android:text="BACK"
            android:textSize="34sp"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_waybill"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_top"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Day Closure"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Total Receipt"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/total_receipt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="false"
                android:hint="Total Receipt"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Other Receipt"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/other_receipt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Other Receipt"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Diesel"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/diesel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Diesel"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Wages"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/wages"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Wages"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/well_meal"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/well_meal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/well_meal"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Maintenance"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/maintenance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Maintenance"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Other Expenses"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/other_expenses"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Other Expenses"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back3"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:backgroundTint="#FF0000"
                android:text="@string/back"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/button_skip"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:backgroundTint="#03A9F4"
                android:text="SKIP"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_submit_waybill"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:backgroundTint="#4CAF50"
                android:text="@string/submit"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="0dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
